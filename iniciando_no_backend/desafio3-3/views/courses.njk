{% extends "layout.njk" %}

{% block head %}
    <title>Rocketseat Cursos</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
{% endblock %}

{% block content %}

    <h1>Bootcamp Rocketseat</h1>

    <section class="cards">

        {% for item in items %}
            <div class="card" id="{{item.id}}">
                <div class="card__image-container {{ 'open-wrapper' if item.open }}">
                    <img src="{{item.img}}" alt="starter">
                    {% if item.open %}
                        <div class="open">Inscrições Abertas</div>
                    {% endif %}
                </div>
                <div class="card__content">
                    <p>{{item.content}}</p>
                </div>
                <div class="card__info">
                    <p>{{item.duration}}</p>
                    <p class="card__price" id="{{item.color}}">{{item.price}}</p>
                </div>
            </div>
        {% endfor %}
        

    </section>

    <script src="scripts.js"></script>

{% endblock %}