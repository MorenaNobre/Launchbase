{% extends "layout.njk" %}

{% block content %}

<form class="card-form" method="POST" action="/teachers">
    <section class="avatar" style="border-radius: 20px 0px 0px 20px; background: url(https://source.unsplash.com/collection/895539) no-repeat center center"></section>

    <section class="details">

        <h3>New Teacher</h3>

        <div class="item">
            <div>Avatar URL</div>
            <div>
                <input 
                    type="url" 
                    name="avatar_url"
                    placeholder="http://"
                >
            </div>
        </div>
        
        <div class="item">
            <div>Teacher</div>
            <div>
                <input 
                    type="text"
                    name="name"
                    placeholder="Teachers Name"
                >
            </div>
        </div>

        <div class="item">
            <div>Date of Birth</div>
            <div>
                <input 
                    type="date" 
                    name="birth"
                >
            </div>
        </div>

        <div class="item">
            <div>Educational Level</div>
            <div>
                <select name="educational_level">
                    <option value="None" selected>-- Select --</option>
                    <option value="High School">High School</option>
                    <option value="University Education">University Education</option>
                    <option value="Masters Degree">Masters Degree</option>
                    <option value="Doctorate Degree">Doctorate Degree</option>
                </select>
            </div>
        </div>

        <div class="item">
            <div>Class Type</div>
            <div>
                <span><input type="radio" name="type_class" value="E-learning" checked>E-learning</span>
                <span><input type="radio" name="type_class" value="Presential">Presential Class</span>
            </div>
        </div>

        <div class="item">
            <div>Lessons</div>
            <div>
                <input 
                    type="text" 
                    name="lessons"
                    placeholder="Separate the lessons by commas"
                >
            </div>
        </div>

        <button type="submit">Save</button>

    </section>
</form>
    
{% endblock %}