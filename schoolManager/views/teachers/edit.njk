{% extends "layout.njk" %}

{% block content %}

  <div class="card">

    <section class="avatar" style="background: url({{teacher.avatar_url}}) no-repeat center center / cover">
    </section>

    <section class="details">

      <form method="POST" action="/teachers?_method=PUT">
         <h3>Editar Professor(a)</h3>

          {% include "teachers/fields.njk" %}

          <input 
            type="hidden" 
            name="id" 
            value={{teacher.id}}
          >

          <div class="button-side">
            <button type="submit">Salvar</button>
            <button type="submit" form="form-delete" id="red">Deletar</button>
          </div>
      </form>

      <form id="form-delete" action="/teachers?_method=DELETE" method="post">
        <input 
          type="hidden" 
          name="id" 
          value={{teacher.id}}
        >
      </form>

    </section>
    
  </div>

  

{% endblock content %}