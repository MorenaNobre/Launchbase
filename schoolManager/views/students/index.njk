{% extends "layout.njk" %}

{% block content %}

<div class="card table-container">
  <table width="100%">
    <a href="/students/create">Novo</a>
    <thead>
      <tr>
        <th>Estudante</th>
        <th>Email</th>
        <th>Escolaridade</th>
        <th>Ação</th>
      </tr>
      <tbody>
        {% for student in students %}          
          <tr>
            <td>
              <span style="background-image: url({{student.avatar_url}})"></span>
              {{student.name}}
            </td>
            <td>{{student.email}}</td>
            <td>{{student.ano_escolar}}</td>
            <td><a href="/students/{{student.id}}">Ver</a></td>
          </tr>
        {% endfor %}
      </tbody>
    </thead>
  </table>
</div>
  
{% endblock content %}