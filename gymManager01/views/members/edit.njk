{% extends "layout.njk" %}

{% block content %}

  <div class="card">

    <section class="avatar" style="background: url({{member.avatar_url}}) no-repeat center center / cover"></section>

    <section class="details">

      <form method="POST" action="/members?_method=PUT">

        <h3>Editar Membro</h3>

        {% include "members/fields.njk" %}

        <input 
            type="hidden" 
            name="id" 
            value={{member.id}}
          >
        <div class="button-side">
          <button type="submit">Salvar</button>
          <button type="submit" form="form-delete" id="red" class="delete" data-confirm="Deseja deletar?">Deletar</button>
        </div>
      </form>

      <form id="form-delete" action="/members?_method=DELETE" method="POST">
        <input 
          type="hidden" 
          name="id" 
          value={{member.id}}
          >
      </form>

      {% include "../confirm.njk" %}

    </section>

  </div>  

{% endblock content %}